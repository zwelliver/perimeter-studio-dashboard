# =============================================================================
# Studio Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values
# =============================================================================

# Application Configuration
ENVIRONMENT=production
PORT=8000
CACHE_DURATION=3600

# =============================================================================
# Asana API Configuration
# =============================================================================

# Asana Personal Access Tokens
ASANA_PAT_SCORER=2/your_workspace_id/your_token_id:your_token_secret
ASANA_PAT_BACKDROP=2/your_workspace_id/your_token_id:your_token_secret

# Asana Custom Field GIDs
FILM_DATE_FIELD_GID=1212211613150378
TASK_PROGRESS_FIELD_GID=1209598240843051
NEEDS_SCHEDULING_OPTION_GID=1209598240843052

# Production project GIDs for finding shoots
PRODUCTION_PROJECT_GIDS=1208336083003480,1209597979075357,1209581743268502

# =============================================================================
# Third-party API Keys
# =============================================================================

# AI/ML Services
GROK_API_KEY=xai-your_api_key_here
STABLE_DIFFUSION_API_KEY=sk-your_api_key_here
REPLICATE_API_TOKEN=r8_your_replicate_token_here

# Calendar Integration
CALENDLY_API_KEY=your_calendly_jwt_token_here

# =============================================================================
# Email Configuration
# =============================================================================

# SMTP Settings for alerts
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_USERNAME=your_email@gmail.com

# Alert Email Addresses
ALERT_EMAIL_FROM=studio@perimeter.org
ALERT_EMAIL_TO=admin@perimeter.org

# =============================================================================
# Database Configuration (if needed)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost/studio_dashboard

# =============================================================================
# Security Configuration
# =============================================================================

# SECRET_KEY=your_secret_key_for_jwt_signing
# CORS_ORIGINS=["http://localhost:3000", "https://yourdomain.com"]

# =============================================================================
# File Storage Configuration
# =============================================================================

# Local paths (Railway will use volumes)
REPORTS_DIR=/app/Reports
UPLOAD_DIR=/app/uploads

# =============================================================================
# Logging Configuration
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# Performance Configuration
# =============================================================================

# API rate limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT=30

# Background job intervals (in seconds)
CAPACITY_UPDATE_INTERVAL=3600
FORECAST_UPDATE_INTERVAL=1800
REPORT_CLEANUP_INTERVAL=86400